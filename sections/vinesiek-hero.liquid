{% comment %}
  VINESIEK IMPERIAL RUBY - HERO SECTION
  Cinematográfico, luxo europeu + estética japonesa.
{% endcomment %}

<section class="vinesiek-hero">

  <div class="hero-bg">
    {% if section.settings.hero_image != blank %}
      <img src="{{ section.settings.hero_image | image_url }}" alt="VINESIEK Hero">
    {% else %}
      <div class="hero-placeholder"></div>
    {% endif %}
  </div>

  <div class="hero-overlay"></div>

  <div class="hero-content" style="text-align: {{ section.settings.alignment }};">
    <h1 class="hero-title">{{ section.settings.hero_title }}</h1>

    {% if section.settings.hero_subtitle != blank %}
      <p class="hero-subtitle">{{ section.settings.hero_subtitle }}</p>
    {% endif %}
  </div>

</section>

<style>
  .vinesiek-hero {
    position: relative;
    width: 100%;
    height: 520px;
    overflow: hidden;
  }

  .vinesiek-hero .hero-bg img,
  .hero-placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-placeholder {
    background: linear-gradient(135deg, #C0125A, #A50F47);
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.25);
    backdrop-filter: blur(3px);
  }

  .hero-content {
    position: absolute;
    top: 50%;
    width: 100%;
    transform: translateY(-50%);
    padding: 0 40px;
    color: #FDECEA;
    text-shadow: 0 0 8px #000;
  }

  .hero-title {
    font-size: 54px;
    color: #FFD9EB;
    font-weight: 600;
    letter-spacing: 2px;
    margin-bottom: 12px;
  }

  .hero-subtitle {
    font-size: 22px;
    font-weight: 400;
    color: #FFEAF5;
  }

  @media (max-width: 768px) {
    .vinesiek-hero {
      height: 380px;
    }

    .hero-title {
      font-size: 34px;
    }

    .hero-subtitle {
      font-size: 16px;
    }
  }
</style>

{% schema %}
{
  "name": "VINESIEK Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Imagem do Hero"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Título principal",
      "default": "Style Starts Early"
    },
    {
      "type": "text",
      "id": "hero_subtitle",
      "label": "Subtítulo"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alinhamento do texto",
      "default": "center",
      "options": [
        { "label": "Esquerda", "value": "left" },
        { "label": "Centro", "value": "center" },
        { "label": "Direita", "value": "right" }
      ]
    }
  ],
  "presets": [
    {
      "name": "VINESIEK Hero"
    }
  ]
}
{% endschema %}
