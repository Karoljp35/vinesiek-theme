<div class="hero-wrapper">
  <div class="hero-bg">
    <img src="{{ section.settings.hero_image | img_url: ' master' }}" alt="ZUXE Hero Banner">
  </div>

  <div class="hero-content">
    <h1 class="hero-title">{{ section.settings.hero_title }}</h1>
    <p class="hero-sub">{{ section.settings.hero_subtitle }}</p>
    <a href="{{ section.settings.hero_button_link }}" class="hero-btn">
      {{ section.settings.hero_button_text }}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "ビジュアル・ヒーロー",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "タイトル (JP)",
      "default": "ZUXE プレミアムコレクション"
    },
    {
      "type": "text",
      "id": "hero_subtitle",
      "label": "サブタイトル (JP)",
      "default": "スタイル・品質・安心をあなたへ"
    },
    {
      "type": "text",
      "id": "hero_button_text",
      "label": "ボタンの文字 (JP)",
      "default": "今すぐチェック"
    },
    {
      "type": "url",
      "id": "hero_button_link",
      "label": "ボタンのリンク"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
