{% comment %}
  VINESIEK - Página de Produto Premium
{% endcomment %}

<section class="vp-wrapper">

  <div class="vp-grid">

    <!-- GALERIA -->
    <div class="vp-gallery">
      {% for media in product.media %}
        <div class="vp-media-item">
          {{ media | media_tag }}
        </div>
      {% endfor %}
    </div>

    <!-- INFO -->
    <div class="vp-info">

      <h1 class="vp-title">{{ product.title }}</h1>

      {% if product.vendor %}
        <p class="vp-vendor">{{ product.vendor }}</p>
      {% endif %}

      <p class="vp-price">
        {{ product.price | money }}
      </p>

      {% if product.compare_at_price > product.price %}
        <p class="vp-compare">
          <span>{{ product.compare_at_price | money }}</span> OFF
        </p>
      {% endif %}

      <!-- FORMULÁRIO -->
      <form method="post" action="/cart/add" id="addToCartForm">

        {% if product.variants.size > 1 %}
          <label class="vp-label">Opções</label>
          <select name="id" class="vp-select">
            {% for variant in product.variants %}
              <option value="{{ variant.id }}">{{ variant.title }}</option>
            {% endfor %}
          </select>
        {% else %}
          <input type="hidden" name="id" value="{{ product.variants.first.id }}">
        {% endif %}

        <button type="submit" class="vp-btn-add">
          Adicionar ao carrinho
        </button>
      </form>

      <!-- BENEFÍCIOS -->
      <ul class="vp-benefits">
        <li>✓ Envio rápido do Japão</li>
        <li>✓ Devolução 100% garantida</li>
        <li>✓ Embalagem premium VINESIEK</li>
      </ul>

      <!-- DESCRIÇÃO -->
      <div class="vp-desc">
        {{ product.description }}
      </div>

    </div>

  </div>

</section>


<style>

.vp-wrapper {
  padding: 60px 40px;
}

.vp-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
}

.vp-gallery {
  display: grid;
  gap: 16px;
}

.vp-gallery img {
  width: 100%;
  border-radius: 14px;
}

.vp-title {
  font-size: 34px;
  font-weight: 700;
  color: #7A0B38;
  margin-bottom: 10px;
}

.vp-vendor {
  font-size: 14px;
  color: #B16E83;
  margin-bottom: 10px;
}

.vp-price {
  font-size: 26px;
  font-weight: 600;
  color: #C0125A;
}

.vp-compare span {
  text-decoration: line-through;
  margin-right: 8px;
  color: #888;
}

.vp-label {
  font-size: 15px;
  color: #7A0B38;
  margin-bottom: 4px;
  display: block;
}

.vp-select {
  width: 100%;
  padding: 12px;
  border: 1px solid #DDD;
  border-radius: 10px;
  margin-bottom: 18px;
}

.vp-btn-add {
  width: 100%;
  padding: 14px;
  background: #C0125A;
  color: white;
  font-size: 18px;
  font-weight: 600;
  border-radius: 12px;
  border: none;
  cursor: pointer;
  transition: .2s;
}

.vp-btn-add:hover {
  background: #9E0F4A;
}

.vp-benefits {
  list-style: none;
  padding: 0;
  margin: 20px 0 30px;
  color: #7A0B38;
  font-size: 14px;
  line-height: 1.7;
}

.vp-desc {
  margin-top: 30px;
  font-size: 15px;
  color: #444;
  line-height: 1.7;
}

@media(max-width: 900px){
  .vp-grid {
    grid-template-columns: 1fr;
  }
}

</style>


